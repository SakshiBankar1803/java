
/*Define a class patient (patient_name, patient_age, patient_oxy_level,patient_HRCT_report). 
Create an object of patient. Handle appropriate exception while patient oxygen level less than 
95% and HRCT scan report greater than 10, then throw user defined Exception “Patient is Covid 
Positive(+) and Need to Hospitalized” otherwise display its information. */

import java.util.*;

class covid extends Exception
{
public String toString()
{
	return "patient is covid +ve need to hospitilized";
}
}

public class patient 
{
	String name;
	int age,olevel,hrct;
	void accept()
	{
		try
		{
			Scanner sc=new Scanner(System.in);
			System.out.println("enter name age oxylevel hrct::");
			name=sc.next();
			age=sc.nextInt();
			olevel=sc.nextInt();
			hrct=sc.nextInt();
			if(olevel<95&&hrct>10)
				throw new covid();
			System.out.println("patient name="+name);
			System.out.println("patient age="+age);
			System.out.println("patient oxygen level="+olevel);
			System.out.println("patient hrct="+hrct);
		}catch(Exception e)
		{
			System.out.println(e);
		}
	}

	public static void main(String[] args) 
	{
		patient ob=new patient();
		ob.accept();

	}

}
