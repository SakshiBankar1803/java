// Write a program to accept a number from the user, if number is zero then throw user defined exception “Number is 0” otherwise check whether no is prime or not (Use static keyword). 

//Write a program to accept a number from the user, if number is zero then throw user defined   
 //      exception “Number is 0” otherwise check whether no is prime or not (Use static keyword).

import java.util.*;
class NumberException extends Exception
{
	public String toString()
	{
		return "number is zero errror...";
	}
}
public class slip14 
{

	static void prime(int n)
	{
		int i;
		for(i=2;i<n;i++)
		{
			if(n%i==0)
			{
				System.out.println("number is not prime");
				break;
			}
		}
		if(i==n)
			System.out.println("number is prime");
	}
	public static void main(String[] args) 
	{
		try
		{
		  Scanner sc=new Scanner(System.in);
		  System.out.println("enter a number::");
		  int n=sc.nextInt();
		  if(n==0)
			  throw new NumberException();
		  else
		  prime(n);
		}catch(Exception e)
		{
			System.out.println(e);
		}
	}

}
