
/*Create an employee class(id,name,deptname,salary). Define a default and parameterized   
         constructor. Use ‘this’ keyword to initialize instance variables. Keep a count of objects  
         created. Create objects using parameterized constructor and display the object count after 
         each object is created. (Use static member and method). Also display the contents of each  
         object. */   

public class slip21 
{
	static int c=0;
	int id,sal;
	String name,dept;
	
	slip21()
	{
		c++;
		
	  id=101;
	  name="sai";
	  dept="comp";
	  sal=120000;
	}
	slip21(int id,String name,String dept,int sal)
	{
		c++;
		this.id=id;
		this.name=name;
		this.dept=dept;
		this.sal=sal;
	}
	void disp()
	{
		System.out.println("emp id="+id);
		System.out.println("emp name="+name);
		System.out.println("emp department="+dept);
		System.out.println("emp sal="+sal);
		System.out.println("object count="+c);
	}

	public static void main(String[] args)
	{
		slip21 ob=new slip21();
		ob.disp();
		slip21 ob1=new slip21(1,"ram","acc",23000);
		ob1.disp();
		slip21 ob2=new slip21(2,"sham","phy",34243);
		ob2.disp();

	}

}
